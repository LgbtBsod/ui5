<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:smart="sap.ui.comp.smartfilterbar"
  controllerName="theme7.controller.Master">

  <Page showHeader="false">
    <VBox class="contentWrap">

      <smart:SmartFilterBar entitySet="dummy"
                             persistencyKey="Demo"
                             class="glassHero"/>

      <VBox class="glassSurface">
        <Table growing="true"
               items="{dataModel>/searchResults}"
               itemPress=".onSelect">

          <columns>
            <Column><Text text="ID"/></Column>
            <Column><Text text="Name"/></Column>
            <Column><Text text="Status"/></Column>
          </columns>

          <items>
            <ColumnListItem type="Active">
              <cells>
                <Text text="{dataModel>id}"/>
                <Text text="{dataModel>name}"/>
                <HBox>
                  <core:HTML
                    xmlns:core="sap.ui.core"
                    content='&lt;div class="dot"&gt;&lt;/div&gt;'/>
                </HBox>
              </cells>
            </ColumnListItem>
          </items>

        </Table>
      </VBox>

    </VBox>
  </Page>
</mvc:View>