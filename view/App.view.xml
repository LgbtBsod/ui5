<mvc:View
  controllerName="sap_ui5.controller.App"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.f"
  xmlns:m="sap.m"
  displayBlock="true">

  <m:App>

    <FlexibleColumnLayout
      id="fcl"
      layout="OneColumn"
      backgroundDesign="Solid"/>

    <!-- THEME SWITCH BUTTON -->
    <m:Button
      icon="sap-icon://palette"
      press="onToggleTheme"
      class="themeSwitchButton"/>

  </m:App>

</mvc:View>