<mvc:View
    controllerName="sap_ui5.controller.App"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:cc="sap_ui5.control"
    xmlns:layout="sap.ui.layout">

    <html:div class="bg-blobs"></html:div>

    <cc:ThemeToggle
        dark="{appView>/isDark}"
        tooltip="{= ${appView>/isDark} ? ${i18n>themeSwitchToLight} : ${i18n>themeSwitchToDark} }"
        press=".onToggleTheme"/>

    <Toolbar class="toolbarTransparent sapUiTinyMarginBegin sapUiTinyMarginTop">
        <ToolbarSpacer/>
        <ObjectStatus text="{= ${state>/testUser} ? ${state>/testUser} : 'demoUser' }" state="Information"/>
    </Toolbar>

    <layout:Splitter id="mainSplitter" width="100%" height="calc(100% - 3rem)" class="appRootSplitter appSplitModeSingle">
        <layout:contentAreas>
            <layout:SplitterContent id="searchPaneHost">
                <layout:layoutData>
                    <layout:SplitterLayoutData size="{state>/splitterLeftSize}" minSize="320" resizable="false"/>
                </layout:layoutData>
                <layout:content>
                    <layout:VerticalLayout width="100%" class="searchPaneCenterShell">
                        <mvc:XMLView id="searchPaneView" viewName="sap_ui5.view.Search"/>
                    </layout:VerticalLayout>
                </layout:content>
            </layout:SplitterContent>

            <layout:SplitterContent id="detailPaneHost">
                <layout:layoutData>
                    <layout:SplitterLayoutData size="{state>/splitterRightSize}" minSize="420" resizable="false"/>
                </layout:layoutData>
                <layout:content>
                    <mvc:XMLView id="detailPaneView" viewName="sap_ui5.view.Detail"/>
                </layout:content>
            </layout:SplitterContent>
        </layout:contentAreas>
    </layout:Splitter>

</mvc:View>
