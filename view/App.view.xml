<mvc:View
  controllerName="sap_ui5.controller.App"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:f="sap.f"
  xmlns:m="sap.m"
  xmlns="sap.m"
  displayBlock="true">

  <m:App id="app">
    <m:pages>
      <m:Page backgroundDesign="Transparent" showHeader="false">
        <m:content>
          
          <f:FlexibleColumnLayout id="fcl" backgroundDesign="Transparent"/>
          
          <m:Button 
            icon="sap-icon://palette" 
            press="onToggleTheme" 
            class="themeSwitchButton"/>
            
        </m:content>
      </m:Page>
    </m:pages>
  </m:App>
</mvc:View>