<mvc:View
    controllerName="sap_ui5.controller.App"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    xmlns="sap.m"
    xmlns:html="http://www.w3.org/1999/xhtml">

    <html:div class="bg-blobs"></html:div>

    <Button
        icon="{= ${appView>/isDark} ? 'sap-icon://sun' : 'sap-icon://moon' }"
        tooltip="Switch Fiori theme"
        press=".onToggleTheme"
        type="Transparent"
        class="themeDockButton"/>


    <VBox class="themePhilosophyBadge sapUiTinyMarginBegin sapUiTinyMarginTop" renderType="Bare">
        <Text text="{appView>/themeTitle}" class="themePhilosophyTitle"/>
        <Text text="{appView>/themeSubtitle}" class="themePhilosophySubtitle"/>
    </VBox>

    <Toolbar class="toolbarTransparent sapUiTinyMarginBegin sapUiTinyMarginTop">
        <Title level="H6" text="PCCT"/>
        <ToolbarSpacer/>
        <ObjectStatus text="{= ${state>/testUser} ? ${state>/testUser} : 'demoUser' }" state="Information"/>
    </Toolbar>

    <f:FlexibleColumnLayout id="fcl" layout="{state>/layout}" />
</mvc:View>
