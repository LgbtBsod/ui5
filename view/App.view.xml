        <html:svg class="sunIcon" viewBox="0 0 24 24">
            <html:circle cx="12" cy="12" r="5"></html:circle>
            <html:line x1="12" y1="1" x2="12" y2="3"></html:line>
            <html:line x1="12" y1="21" x2="12" y2="23"></html:line>
            <html:line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></html:line>
            <html:line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></html:line>
        </html:button>

        <f:FlexibleColumnLayout id="fcl" layout="{/layout}" />
</mvc:View>