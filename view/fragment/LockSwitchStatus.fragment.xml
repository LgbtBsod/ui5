<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <BusyIndicator visible="{state>/lockOperationPending}" size="1rem" class="sapUiTinyMarginEnd"/>
    <Switch
        state="{= ${state>/mode} === 'EDIT' }"
        enabled="{= !${state>/lockOperationPending} }"
        change=".onToggleEdit"
        class="accentSwitch"/>
    <ObjectStatus
        text="{state>/lockOperationText}"
        state="{= ${state>/lockOperationState} === 'SUCCESS' ? 'Success' : ${state>/lockOperationState} === 'ERROR' ? 'Error' : 'Information' }"
        class="sapUiTinyMarginBegin"/>
</core:FragmentDefinition>
