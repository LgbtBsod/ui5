<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <VBox class="searchStatusStripStack sapUiTinyMarginBottom">
        <MessageStrip
            text="{view>/filterHintText}"
            type="{view>/filterHintType}"
            visible="{view>/filterHintVisible}"
            showIcon="true"
            class="searchFilterHintBanner"/>

        <MessageStrip
            text="{= ${view>/smartControlsReason} || ${i18n>smartControlsUnavailable} }"
            type="Warning"
            visible="{= !${view>/useSmartControls} }"
            showIcon="true"
            class="searchLoadStateBanner searchDegradedStateBanner"/>

        <MessageStrip
            text="{= ${state>/loadErrorMessage} || ${i18n>loadErrorMessage} }"
            type="Error"
            visible="{state>/loadError}"
            showIcon="true"
            class="searchLoadStateBanner searchLoadErrorBanner"/>
    </VBox>
</core:FragmentDefinition>
