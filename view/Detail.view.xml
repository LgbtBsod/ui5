<mvc:View
    controllerName="sap_ui5.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form">

    <Page showHeader="false" class="pageTransparent">

        <VBox class="appContent detailContent">

            <HBox justifyContent="End" class="sapUiTinyMarginBottom">
                <Button
                    icon="sap-icon://lightbulb"
                    press=".onToggleTheme"
                    class="themeButton"/>
                <Button
                    icon="sap-icon://decline"
                    type="Transparent"
                    tooltip="Close details"
                    press=".onCloseDetail"/>
            </HBox>

            <VBox class="glassCard">
                <Title text="Basic Information"/>
                <form:SimpleForm
                    editable="false"
                    layout="ResponsiveGridLayout"
                    columnsL="2"
                    columnsM="2">

                    <Label text="Date"/>
                    <Text text="{selected>/basic/date}"/>

                    <Label text="Equipment"/>
                    <Text text="{selected>/basic/equipment}"/>

                    <Label text="LPC"/>
                    <Text text="{selected>/basic/LPC_TEXT}"/>

                </form:SimpleForm>
            </VBox>

            <VBox class="glassCard">
                <Title text="Checks"/>
                <Table items="{selected>/checks}">
                    <columns>
                        <Column><Text text="Check"/></Column>
                        <Column><Text text="Status"/></Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{selected>text}"/>
                                <ObjectStatus
                                    text="{path: 'selected>result', formatter: '.resultText'}"
                                    state="{path: 'selected>result', formatter: '.resultState'}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>

            <VBox class="glassCard">
                <Title text="Barriers"/>
                <Table items="{selected>/barriers}">
                    <columns>
                        <Column><Text text="Barrier"/></Column>
                        <Column><Text text="Status"/></Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{selected>text}"/>
                                <ObjectStatus
                                    text="{path: 'selected>result', formatter: '.resultText'}"
                                    state="{path: 'selected>result', formatter: '.resultState'}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>

        </VBox>

    </Page>
</mvc:View>
