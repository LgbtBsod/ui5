<mvc:View
  controllerName="sap_ui5.controller.Detail"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core">

  <VBox class="luxRoot">

    <!-- HERO -->
    <VBox class="luxHero luxGlass">
      <Title text="{root/id}" class="luxHeroTitle"/>
      <Text text="Checklist Status: {root/status}" class="luxHeroSub"/>
    </VBox>

    <!-- GRID BLOCKS -->
    <FlexBox
      wrap="Wrap"
      class="luxGrid"
      id="kpiGrid">

      <VBox class="luxMiniCard">
        <Text text="Success Checks"/>
        <Title text="{root/successRateChecks} %"/>
      </VBox>

      <VBox class="luxMiniCard">
        <Text text="Success Barriers"/>
        <Title text="{root/successRateBarriers} %"/>
      </VBox>

      <VBox class="luxMiniCard">
        <Text text="LPC"/>
        <Title text="{basic/LPC}"/>
      </VBox>

      <VBox class="luxMiniCard">
        <Text text="Profession"/>
        <Title text="{basic/profession}"/>
      </VBox>

    </FlexBox>

    <!-- BASIC INFO -->
    <VBox class="luxGlass">
      <Title text="Basic Information"/>
      <Text text="Location: {basic/LOCATION_NAME}"/>
      <Text text="Observer: {basic/observer_fullName}"/>
      <Text text="Observed: {basic/observed_fullName}"/>
    </VBox>

    <!-- CHECKS TABLE -->
    <VBox class="luxGlass luxTableWrapper">
      <Title text="Checks"/>
      <Table
        items="{checks}"
        class="luxTable">

        <columns>
          <Column>
            <Text text="Check"/>
          </Column>
          <Column>
            <Text text="Status"/>
          </Column>
        </columns>

        <items>
          <ColumnListItem>
            <cells>
              <Text text="{title}"/>
              <ObjectStatus text="{status}" state="Success"/>
            </cells>
          </ColumnListItem>
        </items>

      </Table>
    </VBox>

    <!-- BARRIERS TABLE -->
    <VBox class="luxGlass luxTableWrapper">
      <Title text="Barriers"/>
      <Table
        items="{barriers}"
        class="luxTable">

        <columns>
          <Column>
            <Text text="Barrier"/>
          </Column>
          <Column>
            <Text text="Status"/>
          </Column>
        </columns>

        <items>
          <ColumnListItem>
            <cells>
              <Text text="{title}"/>
              <ObjectStatus text="{status}" state="Warning"/>
            </cells>
          </ColumnListItem>
        </items>

      </Table>
    </VBox>

  </VBox>

</mvc:View>