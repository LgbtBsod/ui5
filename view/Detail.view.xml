<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  controllerName="sap_ui5.controller.Detail">

  <Page title="Checklist details">
    <content>
      <VBox class="contentWrap">
        <VBox class="glassSurface">
          <Title text="Execution checklist" level="H2"/>
          <Text text="Final validation steps before release." class="mutedText sapUiTinyMarginBottom"/>

          <List items="{data>/selectedChecklist/checks}" showSeparators="Inner">
            <CustomListItem>
              <HBox justifyContent="SpaceBetween" alignItems="Center" width="100%">
                <VBox>
                  <Title text="{data>text}" level="H4"/>
                  <Text text="Operational control" class="mutedText"/>
                </VBox>
                <ObjectStatus 
                  text="{= ${data>result} ? 'OK' : 'Failed' }" 
                  state="{= ${data>result} ? 'Success' : 'Error' }"/>
              </HBox>
            </CustomListItem>
          </List>
        </VBox>
      </VBox>
    </content>
  </Page>
</mvc:View>
