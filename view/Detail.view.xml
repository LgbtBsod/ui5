<mvc:View
    controllerName="sap_ui5.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form">

    <Page showHeader="false" class="pageTransparent">

        <VBox class="detailContainer">

            <Button
                icon="sap-icon://lightbulb"
                press=".onToggleTheme"
                class="themeButton"/>

            <VBox class="glassCard">
                <Title text="Basic Information"/>
                <form:SimpleForm
                    editable="false"
                    layout="ResponsiveGridLayout"
                    columnsL="2"
                    columnsM="2">

                    <Label text="Date"/>
                    <Text text="{selected>/date}"/>

                    <Label text="Equipment"/>
                    <Text text="{selected>/equipment}"/>

                    <Label text="LPC"/>
                    <Text text="{selected>/lpc}"/>

                </form:SimpleForm>
            </VBox>

            <VBox class="glassCard">
                <Title text="Checks"/>
                <Table items="{selected>/checksList}">
                    <columns>
                        <Column><Text text="Check"/></Column>
                        <Column><Text text="Status"/></Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{selected>text}"/>
                                <ObjectStatus
                                    text="{selected>status}"
                                    state="{path:'selected>status', formatter:'.statusState'}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>

            <VBox class="glassCard">
                <Title text="Barriers"/>
                <Table items="{selected>/barriersList}">
                    <columns>
                        <Column><Text text="Barrier"/></Column>
                        <Column><Text text="Status"/></Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{selected>text}"/>
                                <ObjectStatus
                                    text="{selected>status}"
                                    state="{path:'selected>status', formatter:'.statusState'}"/>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>

        </VBox>

    </Page>
</mvc:View>