<Page showHeader="false">

<VBox class="pagePadding">

<!-- Header -->
<HBox class="glassHero">
  <Title text="{dataModel>/object/root/id}"/>
  <ToolbarSpacer/>
  <Switch state="{= ${stateModel>/mode} === 'EDIT' }"
          change=".onToggleEdit"/>
</HBox>

<!-- Basic Block -->
<VBox class="glassSurface blockCard">

  <Label text="Date"/>
  <DatePicker value="{dataModel>/object/basic/date}"
              editable="{= ${stateModel>/mode}==='EDIT'}"/>

  <Label text="Timezone"/>
  <Select items="{referenceModel>/timezones}"
          selectedKey="{dataModel>/object/basic/timezone}"
          enabled="{= ${stateModel>/mode}==='EDIT'}">
      <core:Item key="{referenceModel>key}" text="{referenceModel>text}"
      xmlns:core="sap.ui.core"/>
  </Select>

</VBox>

<!-- Checks Table -->
<VBox class="glassSurface blockCard">
  <Title text="Checks"/>

  <Table items="{dataModel>/object/checks}">
    <columns>
      <Column><Text text="No"/></Column>
      <Column><Text text="Text"/></Column>
      <Column><Text text="Result"/></Column>
    </columns>

    <ColumnListItem>
      <cells>
        <Text text="{dataModel>no}"/>
        <Text text="{dataModel>text}"/>
        <Switch state="{dataModel>result}"
                enabled="{= ${stateModel>/mode}==='EDIT'}"/>
      </cells>
    </ColumnListItem>
  </Table>
</VBox>

</VBox>
</Page>