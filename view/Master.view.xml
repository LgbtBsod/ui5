<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:smart="sap.ui.comp.smartfilterbar"
  controllerName="sap_ui5.controller.Master">

  <Page showHeader="false">
    <VBox class="contentWrap">

      <!-- Smart Filters -->
      <smart:SmartFilterBar
        id="filterBar"
        entitySet="BarrierSet"
        persistencyKey="demoFilters"
        class="glassHero"
      />

      <!-- Custom Segmented Filters -->
      <HBox class="glassSurface segFilters">
        <SegmentedButton
          id="hasFailedChecks"
          selectedKey="{stateModel>/filterMode}"
          buttons='[
            {"text":"ALL","key":"ALL"},
            {"text":"TRUE","key":"TRUE"},
            {"text":"FALSE","key":"FALSE"}
          ]'
        />
        <SegmentedButton
          id="hasFailedBarriers"
          selectedKey="{stateModel>/filterMode}"
          buttons='[
            {"text":"ALL","key":"ALL"},
            {"text":"TRUE","key":"TRUE"},
            {"text":"FALSE","key":"FALSE"}
          ]'
        />
      </HBox>

      <!-- Action Buttons -->
      <HBox class="btnBar">
        <Button text="Create" press=".onCreate"/>
        <Button text="Copy" press=".onCopy"/>
        <ToolbarSpacer/>
        <Button text="Sort"/>
        <Button text="Group"/>
        <Button text="Settings"/>
        <Button text="Export"/>
      </HBox>

      <!-- Search Table -->
      <VBox class="glassSurface">
        <Table
          growing="true"
          items="{dataModel>/searchResults}"
          itemPress=".onSelect">

          <columns>
            <Column><Text text="ID"/></Column>
            <Column><Text text="Date Check"/></Column>
            <Column><Text text="LPC"/></Column>
            <Column><Text text="PROF"/></Column>
          </columns>

          <ColumnListItem>
            <cells>
              <Text text="{dataModel>id}"/>
              <Text text="{dataModel>date_check}"/>
              <Text text="{dataModel>lpc_t}"/>
              <Text text="{dataModel>prof_t}"/>
            </cells>
          </ColumnListItem>

        </Table>
      </VBox>

    </VBox>
  </Page>

</mvc:View>