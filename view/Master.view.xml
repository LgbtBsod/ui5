<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  controllerName="theme7.controller.Master">

  <Page showHeader="false">
    <VBox class="contentWrap">
      <VBox class="glassHero">
        <Title text="UI wrapper for UI5 project" level="H2"/>
        <Text text="Search and open objects in a flexible 3-column layout."/>
        <SearchField width="100%" placeholder="Search (demo UI)" class="sapUiSmallMarginTop"/>
      </VBox>

      <VBox class="glassSurface">
        <Table growing="true"
               items="{dataModel>/searchResults}"
               itemPress=".onSelect">

          <columns>
            <Column><Text text="ID"/></Column>
            <Column><Text text="Name"/></Column>
            <Column><Text text="Status"/></Column>
          </columns>

          <items>
            <ColumnListItem type="Active">
              <cells>
                <Text text="{dataModel>id}"/>
                <Text text="{dataModel>name}"/>
                <HBox>
                  <core:HTML
                    xmlns:core="sap.ui.core"
                    content='&lt;div class="dot"&gt;&lt;/div&gt;'/>
                  <Text text="{dataModel>status}" class="sapUiTinyMarginBegin"/>
                </HBox>
              </cells>
            </ColumnListItem>
          </items>

        </Table>
      </VBox>

    </VBox>
  </Page>
</mvc:View>
