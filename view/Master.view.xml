<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:smart="sap.ui.comp.smartfilterbar"
  controllerName="sap_ui5.controller.Master">

<Page showHeader="false">

<VBox class="pagePadding">

<!-- Smart Filter -->
<smart:SmartFilterBar id="filterBar" entitySet="BarrierSet"/>

<!-- Custom Filters -->
<HBox class="glassSurface">
  <SegmentedButton selectedKey="{stateModel>/failedChecks}">
    <items>
      <SegmentedButtonItem key="ALL" text="Checks: All"/>
      <SegmentedButtonItem key="TRUE" text="Failed"/>
      <SegmentedButtonItem key="FALSE" text="Passed"/>
    </items>
  </SegmentedButton>

  <SegmentedButton selectedKey="{stateModel>/failedBarriers}">
    <items>
      <SegmentedButtonItem key="ALL" text="Barriers: All"/>
      <SegmentedButtonItem key="TRUE" text="Failed"/>
      <SegmentedButtonItem key="FALSE" text="Passed"/>
    </items>
  </SegmentedButton>

  <Switch state="{stateModel>/advancedMode}"/>
</HBox>

<!-- Actions -->
<Toolbar>
  <Button text="Create" press=".onCreate"/>
  <Button text="Copy" press=".onCopy"/>
  <ToolbarSpacer/>
  <Button icon="sap-icon://sort"/>
  <Button icon="sap-icon://group-2"/>
  <Button icon="sap-icon://action-settings"/>
  <Button icon="sap-icon://download"/>
</Toolbar>

<!-- Table -->
<Table
  items="{dataModel>/searchResults}"
  itemPress=".onSelect"
  growing="true"
  class="glassSurface">

  <columns>
    <Column><Text text="ID"/></Column>
    <Column><Text text="Date"/></Column>
    <Column><Text text="LPC"/></Column>
    <Column><Text text="PROF"/></Column>
  </columns>

  <ColumnListItem type="Active">
    <cells>
      <Text text="{dataModel>id}"/>
      <Text text="{dataModel>date_check}"/>
      <Text text="{dataModel>lpc_t}"/>
      <Text text="{dataModel>prof_t}"/>
    </cells>
  </ColumnListItem>

</Table>

</VBox>
</Page>
</mvc:View>