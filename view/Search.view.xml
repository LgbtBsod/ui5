<mvc:View
    controllerName="sap_ui5.controller.Search"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable">

    <Page
        showHeader="false"
        class="pageTransparent"
        busy="{state>/isLoading}">

        <content>
            <VBox class="appContent sapUiSmallMargin">

                <HBox class="workflowRail searchHeaderKpiRail" renderType="Bare" wrap="Wrap" justifyContent="SpaceBetween" alignItems="Stretch">
                    <VBox class="workflowStageCard">
                        <Text text="{i18n>workflowTitle}" class="workflowEyebrow"/>
                        <Title text="{= ${view>/workflowStage} === 'ANALYZE' ? ${i18n>workflowStageAnalyze} : ${view>/workflowStage} === 'REVIEW' ? ${i18n>workflowStageReview} : ${i18n>workflowStageDiscover} }" level="H4"/>
                        <Text text="{i18n>workflowSubtitle}" class="sapUiTinyMarginTop"/>
                        <Button text="{i18n>workflowAnalyticsButton}" icon="sap-icon://business-objects-experience" type="Transparent" press=".onOpenWorkflowAnalytics" class="brandActionBtn brandActionGhost sapUiTinyMarginTop"/>
                    </VBox>
                    <HBox class="kpiGrid searchAnalyticsGrid" renderType="Bare" wrap="Wrap">
                        <VBox class="kpiCard searchAnalyticsCard searchAnalyticsCardPrimary">
                            <Text text="{i18n>kpiVisible}" class="kpiLabel"/>
                            <BusyIndicator visible="{view>/analyticsRailBusy}" size="0.9rem" class="sapUiTinyMarginTop sapUiTinyMarginBottom"/>
                            <Title text="{view>/analyticsRail/total}" level="H4" visible="{= !${view>/analyticsRailBusy} }"/>
                            <Text text="{= ${i18n>analyticsSource} + ': ' + (${view>/analyticsRail/sourceText} || '-') }" class="searchAnalyticsMeta"/>
                        </VBox>
                        <VBox class="kpiCard searchAnalyticsCard">
                            <Text text="{i18n>kpiMonthTotal}" class="kpiLabel"/>
                            <BusyIndicator visible="{view>/analyticsRailBusy}" size="0.9rem" class="sapUiTinyMarginTop sapUiTinyMarginBottom"/>
                            <Title text="{view>/analyticsRail/monthly}" level="H4" visible="{= !${view>/analyticsRailBusy} }"/>
                            <Text text="{= ${i18n>workflowUpdatedAt} + ': ' + (${view>/analyticsRail/refreshedAtText} || '-') }" class="searchAnalyticsMeta"/>
                        </VBox>
                        <VBox class="kpiCard searchAnalyticsCard">
                            <Text text="{i18n>kpiFailedChecks}" class="kpiLabel"/>
                            <BusyIndicator visible="{view>/analyticsRailBusy}" size="0.9rem" class="sapUiTinyMarginTop sapUiTinyMarginBottom"/>
                            <Title text="{view>/analyticsRail/failedChecks}" level="H4" visible="{= !${view>/analyticsRailBusy} }"/>
                            <Text text="{= ${i18n>analyticsAvgChecksRate} + ': ' + (${view>/analyticsRail/avgChecksRate} || 0) + '%' }" class="searchAnalyticsMeta"/>
                        </VBox>
                        <VBox class="kpiCard searchAnalyticsCard">
                            <Text text="{i18n>kpiFailedBarriers}" class="kpiLabel"/>
                            <BusyIndicator visible="{view>/analyticsRailBusy}" size="0.9rem" class="sapUiTinyMarginTop sapUiTinyMarginBottom"/>
                            <Title text="{view>/analyticsRail/failedBarriers}" level="H4" visible="{= !${view>/analyticsRailBusy} }"/>
                            <Text text="{= ${i18n>analyticsAvgBarriersRate} + ': ' + (${view>/analyticsRail/avgBarriersRate} || 0) + '%' }" class="searchAnalyticsMeta"/>
                        </VBox>
                    </HBox>
                </HBox>

                <core:Fragment fragmentName="sap_ui5.view.fragment.SearchLoadStatePanel" type="XML"/>

                <VBox class="glassCard filterCard smartFilterGlass sapUiSmallMarginBottom searchFilterCardDense mergeBlock mergeBlockTop">
                    <Toolbar class="toolbarTransparent">
                        <Title text="{i18n>filtersTitle}"/>
                    </Toolbar>

                    <smartFilterBar:SmartFilterBar
                        id="searchSmartFilterBar"
                        entitySet="ChecklistFlatSet"
                        persistencyKey="pcctSmartFilter"
                        useToolbar="true"
                        visible="{view>/useSmartControls}"
                        showGoOnFB="true"
                        showClearOnFB="true"
                        liveMode="false"
                        enableBasicSearch="false"
                        useDateRangeType="true"
                        search=".onSmartSearch"
                        filterChange=".onSmartFilterChanged">
                        <smartFilterBar:controlConfiguration>
                            <smartFilterBar:ControlConfiguration key="ChecklistId" visibleInAdvancedArea="true" hasTypeAhead="true"/>
                            <smartFilterBar:ControlConfiguration key="Lpc" visibleInAdvancedArea="true"/>
                            <smartFilterBar:ControlConfiguration key="Status" visibleInAdvancedArea="true"/>
                            <smartFilterBar:ControlConfiguration key="Date" visibleInAdvancedArea="true"/>
                            <smartFilterBar:ControlConfiguration key="Equipment" visibleInAdvancedArea="true"/>
                            <smartFilterBar:ControlConfiguration key="ChangedOn" visibleInAdvancedArea="true"/>
                        </smartFilterBar:controlConfiguration>
                    </smartFilterBar:SmartFilterBar>

                    <OverflowToolbar class="toolbarTransparent quickFiltersRow sapUiTinyMarginTop" visible="false">
                        <Label text="{i18n>filterChecklistIdLabel}" class="sapUiTinyMarginEnd">
                            <layoutData><OverflowToolbarLayoutData priority="Disappear"/></layoutData>
                        </Label>
                        <Input value="{state>/filterId}" placeholder="{i18n>checklistIdPlaceholder}" width="12rem" class="sapUiTinyMarginEnd">
                            <layoutData><OverflowToolbarLayoutData priority="Low"/></layoutData>
                        </Input>
                        <Label text="{i18n>filterLpcLabel}" class="sapUiTinyMarginEnd">
                            <layoutData><OverflowToolbarLayoutData priority="Disappear"/></layoutData>
                        </Label>
                        <Select selectedKey="{state>/filterLpc}" width="9rem" class="sapUiTinyMarginEnd">
                            <layoutData><OverflowToolbarLayoutData priority="Low"/></layoutData>
                            <items>
                                <core:Item key="" text="{i18n>allLpc}"/>
                                <core:Item key="L1" text="{i18n>lpcLow}"/>
                                <core:Item key="L2" text="{i18n>lpcMedium}"/>
                                <core:Item key="L3" text="{i18n>lpcHigh}"/>
                            </items>
                        </Select>
                        <ToolbarSpacer/>
                        <Button text="{i18n>workflowActionRefresh}" icon="sap-icon://refresh" type="Transparent" press=".onRetryLoad" enabled="{view>/canRetryLoad}" class="brandActionBtn brandActionGhost searchRetryLoadActionBtn sapUiTinyMarginEnd">
                            <layoutData><OverflowToolbarLayoutData priority="High"/></layoutData>
                        </Button>
                        <Button text="{i18n>resetButton}" icon="sap-icon://undo" type="Transparent" press=".onResetFilters" class="brandActionBtn brandActionGhost">
                            <layoutData><OverflowToolbarLayoutData priority="High"/></layoutData>
                        </Button>
                    </OverflowToolbar>

                    <OverflowToolbar class="toolbarTransparent searchCriteriaActions sapUiTinyMarginTop">
                        <Button text="{i18n>searchButton}" icon="sap-icon://search" type="Emphasized" press=".onSearch" class="brandActionBtn brandActionPrimary searchPinnedActionBtn sapUiTinyMarginEnd" visible="false"/>

                    </OverflowToolbar>
                </VBox>

                <VBox class="glassCard smartTableGlass searchResultsTable mergeBlock mergeBlockBottom">
                    <OverflowToolbar class="toolbarTransparent tableActionToolbar searchToolbar searchActionToolbarDensity searchFeedbackToolbar sapUiTinyMarginBottom">
                        <Button text="{i18n>createButton}" icon="sap-icon://add" press=".onCreate" class="brandActionBtn brandActionPrimary searchCreateActionBtn sapUiTinyMarginEnd">
                            <layoutData><OverflowToolbarLayoutData priority="High"/></layoutData>
                        </Button>
                        <Button text="{i18n>copyButton}" icon="sap-icon://copy" press=".onCopy" enabled="{view>/canCopy}" visible="{view>/hasSelection}" class="brandActionBtn brandActionGhost searchCopyActionBtn sapUiTinyMarginEnd">
                            <layoutData><OverflowToolbarLayoutData priority="Low"/></layoutData>
                        </Button>
                        <Button text="{i18n>deleteButton}" icon="sap-icon://delete" type="Reject" press=".onDelete" enabled="{view>/canDelete}" visible="{view>/hasSelection}" class="brandActionBtn searchDeleteActionBtn sapUiTinyMarginEnd">
                            <layoutData><OverflowToolbarLayoutData priority="Low"/></layoutData>
                        </Button>
                        </OverflowToolbar>

                    <HBox class="searchToolbarMetaRail sapUiTinyMarginBottom" renderType="Bare" wrap="Wrap" alignItems="Center" justifyContent="Start">
                        <ObjectStatus text="{view>/resultSummary}" state="Information" class="searchSummaryStatusChip sapUiTinyMarginEnd"/>
                        <ObjectStatus text="{= ${view>/workflowStage} === 'ANALYZE' ? ${i18n>workflowStageAnalyze} : ${view>/workflowStage} === 'REVIEW' ? ${i18n>workflowStageReview} : ${i18n>workflowStageDiscover} }" state="Success" class="searchStageStatusChip sapUiTinyMarginEnd"/>
                        <Text text="{= ${i18n>workflowUpdatedAt} + ': ' + (${view>/lastUpdatedAt} || '-') }" class="searchUpdatedAtText"/>
                    </HBox>

                    <smartTable:SmartTable
    id="searchSmartTable"
    entitySet="ChecklistFlatSet"
    smartFilterId="searchSmartFilterBar"
    tableType="ResponsiveTable"
    useVariantManagement="true"
    useTablePersonalisation="true"
    showRowCount="true"
    showFullScreenButton="true"
    demandPopin="true"
    header="{i18n>resultsLabel}"
    persistencyKey="pcctSmartTable"
    enableAutoBinding="false"
    visible="{view>/useSmartControls}"
    beforeRebindTable=".onBeforeSmartTableRebind"
    initialise=".onSmartTableInitialise"
    initiallyVisibleFields="Uuid,ChecklistId,Status,Lpc,Date,Equipment,ChangedOn,ChangedBy"
    useExportToExcel="false" 
    requestAtLeastFields="Uuid,ChecklistId,Status,Lpc,ChangedOn"
    class="searchSmartTableControl">

    <smartTable:customToolbar>
        <OverflowToolbar id="smartTableCustomToolbar" class="toolbarTransparent">
            <ToolbarSpacer />

            <Input 
                value="{state>/searchMaxResults}" 
                type="Number" 
                placeholder="{i18n>searchMaxResultsLabel}" 
                width="10rem" 
                change=".onMaxRowsChange" 
                class="maxRowsInput">
                <layoutData>
                    <OverflowToolbarLayoutData priority="Low" shrinkable="true" minWidth="8rem"/>
                </layoutData>
            </Input>

            <Switch 
                state="{= ${state>/searchMode} === 'LOOSE' }" 
                change=".onSearchModeToggle" 
                customTextOn="" 
                customTextOff="" 
                class="accentSwitch">
                <layoutData>
                    <OverflowToolbarLayoutData priority="Disappear" />
                </layoutData>
            </Switch>

            <MenuButton 
                text="{i18n>exportMenuButton}" 
                buttonMode="Split" 
                defaultAction=".onExportMenuDefault" 
                enabled="{view>/canExport}" 
                class="brandActionBtn brandActionGhost" 
                icon="sap-icon://excel-attachment">
                <layoutData>
                    <OverflowToolbarLayoutData priority="Low"/>
                </layoutData>
                <menu>
                    <Menu itemSelected=".onExportMenuAction">
                        <items>
                            <MenuItem text="{i18n>exportModeScreen}" icon="sap-icon://table-view">
                                <customData><core:CustomData key="entity" value="screen"/></customData>
                            </MenuItem>
                            <MenuItem text="{i18n>exportBarriersButton}" icon="sap-icon://warning2">
                                <customData><core:CustomData key="entity" value="barrier"/></customData>
                            </MenuItem>
                            <MenuItem text="{i18n>exportChecksButton}" icon="sap-icon://inspection">
                                <customData><core:CustomData key="entity" value="check"/></customData>
                            </MenuItem>
                        </items>
                    </Menu>
                </menu>
            </MenuButton>
        </OverflowToolbar>
    </smartTable:customToolbar>
</smartTable:SmartTable>

                    <Table id="searchFallbackTable" visible="false" items="{data>/visibleCheckLists}" noDataText="{view>/noDataText}" class="glassTable searchResultsTable searchFallbackTableWrap" mode="SingleSelectMaster" itemPress=".onFallbackItemPress" selectionChange=".onFallbackSelectionChange" growing="true" growingThreshold="100" growingScrollToLoad="false">
                        <columns>
                            <Column><Text text="{i18n>columnId}"/></Column>
                            <Column><Text text="{i18n>columnStatus}"/></Column>
                            <Column><Text text="{i18n>headerLpcLabel}"/></Column>
                            <Column><Text text="{i18n>columnObserver}"/></Column>
                        </columns>
                        <items>
                            <ColumnListItem>
                                <cells>
                                    <ObjectIdentifier title="{data>root/id}" text="{= ${data>basic/CHECKLIST_ID} || ${data>basic/checklist_id} || ${data>root/id} }"/>
                                    <ObjectStatus text="{data>root/status}" state="{path:'data>root/status', formatter:'.formatStatus'}"/>
                                    <Text text="{data>basic/LPC_TEXT}"/>
                                    <Text text="{data>basic/OBSERVER_FULLNAME}"/>
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </VBox>
                <core:Fragment fragmentName="sap_ui5.view.fragment.WorkflowAnalyticsDialog" type="XML"/>
            </VBox>

        </content>
    </Page>
</mvc:View>
