<mvc:View
    controllerName="sap_ui5.controller.Search"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable">

    <Page
        showHeader="false"
        class="pageTransparent"
        busy="{state>/isLoading}">

        <content>
            <VBox class="appContent sapUiSmallMargin">

                <VBox class="glassCard filterCard smartFilterGlass sapUiSmallMarginBottom">
                    <Toolbar class="toolbarTransparent">
                        <Title text="{i18n>filtersTitle}"/>
                    </Toolbar>

                    <smartFilterBar:SmartFilterBar
                        id="searchSmartFilterBar"
                        entitySet="CheckListSet"
                        persistencyKey="pcctSmartFilter"
                        useToolbar="false"
                        visible="{view>/useSmartControls}"
                        showGoOnFB="false"
                        search=".onSmartSearch"
                        filterChange=".onSmartFilterChanged"/>

                    <Toolbar class="toolbarTransparent quickFiltersRow sapUiTinyMarginTop" visible="{view>/useSmartControls}">
                        <ToolbarSpacer/>
                        <Button text="{i18n>workflowActionRefresh}" icon="sap-icon://refresh" type="Transparent" press=".onRetryLoad" class="brandActionBtn brandActionGhost sapUiTinyMarginEnd"/>
                        <Button text="{i18n>resetButton}" icon="sap-icon://undo" type="Transparent" press=".onResetFilters" class="brandActionBtn brandActionGhost"/>
                    </Toolbar>

                    <Toolbar class="toolbarTransparent quickFiltersRow sapUiTinyMarginTop" visible="{= !${view>/useSmartControls} }">
                        <Label text="{i18n>filterChecklistIdLabel}" class="sapUiTinyMarginEnd"/>
                        <Input value="{state>/filterId}" placeholder="{i18n>checklistIdPlaceholder}" width="12rem" class="sapUiTinyMarginEnd"/>
                        <Label text="{i18n>filterLpcLabel}" class="sapUiTinyMarginEnd"/>
                        <Select selectedKey="{state>/filterLpc}" width="9rem" class="sapUiTinyMarginEnd">
                            <items>
                                <core:Item key="" text="{i18n>allLpc}"/>
                                <core:Item key="L1" text="{i18n>lpcLow}"/>
                                <core:Item key="L2" text="{i18n>lpcMedium}"/>
                                <core:Item key="L3" text="{i18n>lpcHigh}"/>
                            </items>
                        </Select>
                        <ToolbarSpacer/>
                        <Button text="{i18n>searchButton}" icon="sap-icon://search" type="Emphasized" press=".onSearch" class="brandActionBtn brandActionPrimary sapUiTinyMarginEnd"/>
                        <Button text="{i18n>workflowActionRefresh}" icon="sap-icon://refresh" type="Transparent" press=".onRetryLoad" class="brandActionBtn brandActionGhost sapUiTinyMarginEnd"/>
                        <Button text="{i18n>resetButton}" icon="sap-icon://undo" type="Transparent" press=".onResetFilters" class="brandActionBtn brandActionGhost"/>
                    </Toolbar>
                </VBox>

                <HBox class="workflowRail" renderType="Bare" wrap="Wrap" justifyContent="SpaceBetween" alignItems="Center">
                    <VBox class="workflowStageCard">
                        <Text text="{i18n>workflowTitle}" class="workflowEyebrow"/>
                        <Title text="{= ${view>/workflowStage} === 'ANALYZE' ? ${i18n>workflowStageAnalyze} : ${view>/workflowStage} === 'REVIEW' ? ${i18n>workflowStageReview} : ${i18n>workflowStageDiscover} }" level="H4"/>
                        <Text text="{i18n>workflowSubtitle}" class="sapUiTinyMarginTop"/>
                        <Button text="{i18n>workflowAnalyticsButton}" icon="sap-icon://business-objects-experience" type="Transparent" press=".onOpenWorkflowAnalytics" class="brandActionBtn brandActionGhost sapUiTinyMarginTop"/>
                    </VBox>
                </HBox>



                <MessageStrip
                    text="{= ${view>/smartControlsReason} || ${i18n>smartControlsUnavailable} }"
                    type="Warning"
                    visible="{= !${view>/useSmartControls} }"
                    showIcon="true"
                    class="sapUiTinyMarginBottom"/>

                <VBox class="glassCard smartTableGlass">
                    <Toolbar class="toolbarTransparent tableActionToolbar searchToolbar sapUiTinyMarginBottom">
                        <Button text="{i18n>createButton}" icon="sap-icon://add" press=".onCreate" class="brandActionBtn brandActionPrimary sapUiTinyMarginEnd"/>
                        <Button text="{i18n>copyButton}" icon="sap-icon://copy" press=".onCopy" visible="{view>/hasSelection}" class="brandActionBtn sapUiTinyMarginEnd"/>
                        <Button text="{i18n>deleteButton}" icon="sap-icon://delete" type="Reject" press=".onDelete" visible="{view>/hasSelection}" class="brandActionBtn sapUiTinyMarginEnd"/>
                        <MenuButton text="{i18n>exportMenuButton}" buttonMode="Split" defaultAction=".onExportMenuDefault" class="brandActionBtn brandActionGhost sapUiTinyMarginEnd" icon="sap-icon://excel-attachment">
                            <menu>
                                <Menu itemSelected=".onExportMenuAction">
                                    <items>
                                        <MenuItem text="{i18n>exportModeScreen}" icon="sap-icon://table-view">
                                            <customData><core:CustomData key="entity" value="screen"/></customData>
                                        </MenuItem>
                                        <MenuItem text="{i18n>exportBarriersButton}" icon="sap-icon://warning2">
                                            <customData><core:CustomData key="entity" value="barrier"/></customData>
                                        </MenuItem>
                                        <MenuItem text="{i18n>exportChecksButton}" icon="sap-icon://inspection">
                                            <customData><core:CustomData key="entity" value="check"/></customData>
                                        </MenuItem>
                                    </items>
                                </Menu>
                            </menu>
                        </MenuButton>
                        <HBox class="maxRowsWrap" alignItems="Center" renderType="Bare">
                            <Label text="{i18n>searchMaxResultsLabel}" class="sapUiTinyMarginEnd"/>
                            <Input value="{state>/searchMaxResults}" type="Number" placeholder="{i18n>maxRowsAllPlaceholder}" width="8rem" change=".onMaxRowsChange" class="maxRowsInput"/>
                        </HBox>
                        <ToolbarSpacer/>
                        <Text text="{= ${i18n>workflowUpdatedAt} + ': ' + (${view>/lastUpdatedAt} || '-') }" class="sapUiTinyMarginEnd"/>
                        <Label text="{i18n>searchModeLabel}" class="sapUiTinyMarginEnd"/>
                        <Switch state="{= ${state>/searchMode} === 'LOOSE' }" change=".onSearchModeToggle" customTextOn="" customTextOff="" class="accentSwitch"/>
                    </Toolbar>

                    <smartTable:SmartTable
                        id="searchSmartTable"
                        entitySet="CheckListSet"
                        smartFilterId="searchSmartFilterBar"
                        tableType="ResponsiveTable"
                        useVariantManagement="true"
                        useTablePersonalisation="true"
                        showRowCount="true"
                        header="{i18n>resultsLabel}"
                        persistencyKey="pcctSmartTable"
                        enableAutoBinding="true"
                        visible="{view>/useSmartControls}"
                        beforeRebindTable=".onBeforeSmartTableRebind"
                        initialise=".onSmartTableInitialise"
                        growing="true" growingThreshold="100"/>

                    <Table visible="{= !${view>/useSmartControls} }" items="{data>/visibleCheckLists}" class="glassTable" mode="SingleSelectMaster" itemPress=".onFallbackItemPress" selectionChange=".onFallbackSelectionChange" growing="true" growingThreshold="100" growingScrollToLoad="false">
                        <columns>
                            <Column><Text text="{i18n>columnId}"/></Column>
                            <Column><Text text="{i18n>columnStatus}"/></Column>
                            <Column><Text text="{i18n>headerLpcLabel}"/></Column>
                            <Column><Text text="{i18n>columnObserver}"/></Column>
                        </columns>
                        <items>
                            <ColumnListItem>
                                <cells>
                                    <ObjectIdentifier title="{data>root/id}" text="{data>basic/checklist_id}"/>
                                    <ObjectStatus text="{data>root/status}" state="{path:'data>root/status', formatter:'.formatStatus'}"/>
                                    <Text text="{data>basic/LPC_TEXT}"/>
                                    <Text text="{data>basic/OBSERVER_FULLNAME}"/>
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </VBox>

            </VBox>
            <core:Fragment fragmentName="sap_ui5.view.fragment.WorkflowAnalyticsDialog" type="XML"/>

        </content>
    </Page>
</mvc:View>
